<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/card_margin">

        <LinearLayout
            style="@style/Widget.CardContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="263dp"
                android:layout_height="wrap_content"
                android:text="Info"
                android:id="@+id/txtTitulo"
                android:textAppearance="@style/TextAppearance.AppCompat.Title" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/data"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/numero"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/autor"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                />



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/descricao" />

            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:layout_width="77dp"
                    android:layout_height="72dp"
                    android:id="@+id/btnConcordo"
                    android:layout_gravity="center_horizontal"
                    style="@style/Base.Widget.AppCompat.Button.ButtonBar.AlertDialog"
                    android:background="@mipmap/ic_action_like_gray" />

                <Button
                    android:layout_width="77dp"
                    android:layout_height="72dp"
                    android:layout_toRightOf="@+id/btnConcordo"
                    style="@style/Base.Widget.AppCompat.Button.ButtonBar.AlertDialog"
                    android:id="@+id/btnDiscordo"
                    android:background="@mipmap/ic_action_unlike_gray" />

                <Button
                    style="@style/Base.Widget.AppCompat.Button.ButtonBar.AlertDialog"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/btnComentar"
                    android:background="@mipmap/ic_action_comment"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignBottom="@+id/btnDiscordo"
                    android:textAlignment="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="0"
                    android:id="@+id/txtNumApoio"
                    android:layout_below="@+id/btnConcordo"
                    android:layout_toLeftOf="@+id/btnDiscordo"
                    android:layout_toStartOf="@+id/btnDiscordo"
                    android:layout_marginRight="32dp"
                    android:layout_marginEnd="32dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="0"
                    android:id="@+id/txtNumNaoApoio"
                    android:layout_below="@+id/btnDiscordo"
                    android:layout_toRightOf="@+id/btnConcordo"
                    android:layout_toEndOf="@+id/btnConcordo"
                    android:layout_marginLeft="33dp"
                    android:layout_marginStart="33dp" />

            </RelativeLayout>


        </LinearLayout>

    </android.support.v7.widget.CardView>



</LinearLayout>